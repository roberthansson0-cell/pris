  <div class="container">
    <h1>ðŸ’° PrisrÃ¤knare</h1>
    
    <label for="productName">Varunamn:</label>
    <input type="text" id="productName" placeholder="Skriv varans namn...">

    <label for="inkop">InkÃ¶pspris (kr):</label>
    <input type="number" id="inkop" placeholder="t.ex. 100">

    <label for="moms">Moms (%):</label>
    <select id="moms">
      <option value="25">25%</option>
      <option value="12">12%</option>
      <option value="6">6%</option>
    </select>

    <label for="profitPercent">Vinst (%):</label>
    <input type="number" id="profitPercent" placeholder="t.ex. 20">

    <label for="profitKr">Vinst (kr):</label>
    <input type="number" id="profitKr" placeholder="eller skriv kr direkt">

    <label for="antal">Antal varor:</label>
    <input type="number" id="antal" placeholder="t.ex. 10">

    <div class="toggle">
      <label><input type="checkbox" id="showWithMoms" checked> Visa priser med moms</label>
    </div>

    <button onclick="rakna()">RÃ¤kna ut</button>
    <button onclick="dela()">Dela resultat</button>

    <div class="result" id="resultat"></div>
  </div>

  <script>
    function rakna() {
      const namn = document.getElementById("productName").value || "OkÃ¤nd vara";
      const inkop = parseFloat(document.getElementById("inkop").value) || 0;
      const moms = parseFloat(document.getElementById("moms").value) || 25;
      const profitPercent = parseFloat(document.getElementById("profitPercent").value) || 0;
      const profitKr = parseFloat(document.getElementById("profitKr").value) || 0;
      const antal = parseInt(document.getElementById("antal").value) || 1;
      const showWithMoms = document.getElementById("showWithMoms").checked;

      let vinst = profitKr > 0 ? profitKr : (inkop * profitPercent / 100);
      let prisExMoms = inkop + vinst;
      let prisInklMoms = prisExMoms * (1 + moms/100);

      let totalVinst = vinst * antal;
      let totalInkop = inkop * antal;
      let totalPrisExMoms = prisExMoms * antal;
      let totalPrisInklMoms = prisInklMoms * antal;

      const prisAttVisa = showWithMoms ? prisInklMoms : prisExMoms;
      const totalPrisAttVisa = showWithMoms ? totalPrisInklMoms : totalPrisExMoms;

      let text = `
        ðŸ“¦ Vara: ${namn}<br>
        ðŸ›’ InkÃ¶pspris: ${inkop.toFixed(2)} kr<br>
        ðŸ’µ FÃ¶rsÃ¤ljningspris (${showWithMoms ? "inkl. moms" : "exkl. moms"}): ${prisAttVisa.toFixed(2)} kr<br>
        ðŸ“Š Vinst per vara: ${vinst.toFixed(2)} kr<br>
        ðŸ”¢ Antal: ${antal}<br>
        ðŸ’° Total fÃ¶rsÃ¤ljning: ${totalPrisAttVisa.toFixed(2)} kr<br>
        ðŸ“ˆ Total vinst: ${totalVinst.toFixed(2)} kr
      `;
      document.getElementById("resultat").innerHTML = text;
    }

    function dela() {
      const res = document.getElementById("resultat").innerText;
      if (navigator.share) {
        navigator.share({
          title: "PrisrÃ¤knare",
          text: res
        });
      } else {
        alert("Delning stÃ¶ds inte pÃ¥ den hÃ¤r enheten. Kopiera texten manuellt:\n\n" + res);
      }
    }
  </script>
